{
  "name": "gitbook-plugin-localized-header",
  "version": "0.3.1",
  "engines": {
    "gitbook": ">=3.1.0"
  },
  "gitbook": {
    "properties": {
      "hline": {
        "type": "boolean",
        "default": "true",
        "description": "whether to include an horizontal line below the header"
      },
      "filename": {
        "type": "string",
        "default": "HEADER.md",
        "description": "name or relative path to the header content file of each book"
      }
    }
  },
  "description": "add a header to each page of a gitbook, allows i10n",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "noerw",
  "repository" : {
    "type" : "git",
    "url" : "https://github.com/Simran-B/gitbook-plugin-localized-header.git"
  },
  "bugs": {
    "url": "https://github.com/Simran-B/gitbook-plugin-localized-header/issues"
  },
  "homepage": "https://github.com/Simran-B/gitbook-plugin-localized-header#readme",
